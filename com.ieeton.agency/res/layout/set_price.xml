<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebeb"
    android:orientation="vertical" >
    
	<View 
		android:background="#c8c8c8"
		android:layout_width="match_parent"
		android:layout_height="@dimen/myprofile_line_height"
		android:layout_marginTop="@dimen/myprofile_topMargin"
		/>
	<RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="@dimen/myprofile_item_height"
	    android:id="@+id/rl_about"
	    android:layout_marginLeft="@dimen/myprofile_leftMargin"
	    >
	    <EditText
			android:layout_centerVertical="true"
			android:id="@+id/et_price"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:paddingLeft="11dp"
			android:hint="@string/input_price_hint"
			android:background="@null"
			android:singleLine="true"
			android:inputType="number"
			android:textColor="@color/toast_text"
			android:textColorHint="@color/toast_text"
			android:textSize="18sp" />
	    <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/iv_delete"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="10dp"
	        android:src="@drawable/icon_delete"
	        />
	</RelativeLayout>
	<View 
		android:background="#c8c8c8"
		android:layout_width="match_parent"
		android:layout_height="@dimen/myprofile_line_height"
		/>
	<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/set_price_notice"
	    android:textColor="@color/color_gray"
	    android:textSize="18sp"
	    android:layout_marginTop="10dp"
	    android:layout_gravity="center_horizontal"
	    />
</LinearLayout>
