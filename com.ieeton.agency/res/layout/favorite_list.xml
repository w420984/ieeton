<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ieeton_color_list_bg"
    android:orientation="vertical" >
    
	<com.ieeton.agency.view.PullDownView 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:id="@+id/pulldown_view"
	    >
	    <ListView 
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:id="@+id/list"
            android:background="@color/ieeton_color_list_bg"
            android:divider="@null"
            android:scrollbars="@null"
	        />
	</com.ieeton.agency.view.PullDownView>
	
	<TextView 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:gravity="center"
	    android:id="@+id/tv_empty"
	    android:textSize="22sp"
	    android:textColor="@color/color_gray"
	    android:text="@string/no_favorite_article"
	    android:visibility="gone"
	    />
	
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:id="@+id/ll_bottom"
	    android:layout_alignParentBottom="true"
	    android:orientation="vertical"
	    android:visibility="gone"
	    >
	    <ImageView 
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:src="@drawable/list_divider"
			android:scaleType="fitXY"
			/>
	    <TextView 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/tv_generate"
	        android:padding="10dp"
	        android:textColor="@color/ieeton_color_blue"
	        android:textSize="18sp"
	        android:gravity="center"
	        android:background="@color/ieeton_color_title_white"
	        android:text="@string/delete"
	        />
	</LinearLayout>
</RelativeLayout>
