<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:padding="5dp"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <com.ieeton.user.view.RoundedImageView 
            android:layout_width="@dimen/comment_header_size"
            android:layout_height="@dimen/comment_header_size"
            android:id="@+id/header"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/doctor_portrait"
            />
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/header"
            >
			<TextView 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:id="@+id/tv_name"
			    android:textSize="17sp"
			    android:textColor="@color/color_black"
			    android:text="辣妈"
			    />
			<RelativeLayout 
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="10dp"
			    >
			    <TextView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:id="@+id/tv_time"
			        android:layout_alignParentRight="true"
			        android:layout_centerVertical="true"
			        android:layout_marginRight="10dp"
			        android:textColor="@color/color_gray"
			        android:text="06-10 14:00"
			        />
		        <ImageView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:id="@+id/iv_star1"
		            android:src="@drawable/star"
			        android:layout_centerVertical="true"
		            />
		        <ImageView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:id="@+id/iv_star2"
		            android:src="@drawable/star"
		            android:layout_toRightOf="@id/iv_star1"
			        android:layout_centerVertical="true"
		            android:layout_marginLeft="3dp"
		            />
		        <ImageView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:id="@+id/iv_star3"
		            android:src="@drawable/star"
		            android:layout_toRightOf="@id/iv_star2"
			        android:layout_centerVertical="true"
		            android:layout_marginLeft="3dp"
		            />
		        <ImageView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:id="@+id/iv_star4"
		            android:src="@drawable/star"
		            android:layout_toRightOf="@id/iv_star3"
			        android:layout_centerVertical="true"
		            android:layout_marginLeft="3dp"
		            />
		        <ImageView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:id="@+id/iv_star5"
		            android:src="@drawable/star"
		            android:layout_toRightOf="@id/iv_star4"
			        android:layout_centerVertical="true"
		            android:layout_marginLeft="3dp"
		            />
			</RelativeLayout>
			
			<TextView 
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:id="@+id/tv_content"
			    android:textColor="@color/color_black"
			    android:layout_marginTop="10dp"
			    android:text="这是一条评论这是一条评论这是一条评论这是一条评论这是一条评论这是一条评论这是一条评论这是一条评论这是一条评论"
			    />
			
			<LinearLayout 
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:id="@+id/ll_pics"
			    android:orientation="horizontal"
			    android:layout_marginTop="10dp"
			    >
			    <ImageView 
			        android:layout_width="@dimen/comment_pic_size"
			        android:layout_height="@dimen/comment_pic_size"
			        android:id="@+id/iv_pic1"
			        android:src="@drawable/share_logo"
			        android:scaleType="fitXY"
			        android:layout_gravity="center_vertical"
			        android:visibility="gone"
			        />
			    <ImageView 
			        android:layout_width="@dimen/comment_pic_size"
			        android:layout_height="@dimen/comment_pic_size"
			        android:id="@+id/iv_pic2"
			        android:src="@drawable/share_logo"
			        android:scaleType="fitXY"
			        android:layout_gravity="center_vertical"
			        android:layout_marginLeft="10dp"
			        android:visibility="gone"
			        />
			    <ImageView 
			        android:layout_width="@dimen/comment_pic_size"
			        android:layout_height="@dimen/comment_pic_size"
			        android:id="@+id/iv_pic3"
			        android:src="@drawable/share_logo"
			        android:scaleType="fitXY"
			        android:layout_gravity="center_vertical"
			        android:layout_marginLeft="10dp"
			        android:visibility="gone"
			        />
			</LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    
	
</LinearLayout>
