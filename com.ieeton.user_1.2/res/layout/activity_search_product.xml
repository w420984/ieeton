<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ieeton_color_list_bg"
    >
    
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/height_top_bar"
	    android:id="@+id/rl_title"
	    android:background="@color/color_white"
	    >
	    <ImageView
	        android:id="@+id/iv_back"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:gravity="center_vertical|center"
	        android:layout_marginLeft="5dp"
	        android:background="@drawable/common_tab_bg"
	        android:src="@drawable/back_blue"
	        android:padding="10dp"
	        android:focusable="true" />
		<ImageView
			android:id="@+id/search_btn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
	        android:background="@drawable/common_tab_bg"
	        android:padding="10dp"
	        android:layout_marginRight="5dp"
			android:src="@drawable/search_icon"
			/>
	    <RelativeLayout 
            android:id="@+id/ll_input_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_back"
            android:layout_toLeftOf="@id/search_btn"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:background="@drawable/search_result_input"
            >
            <ImageView 
                android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:background="@drawable/home_search_input"
	            android:visibility="gone"
                />
            <EditText 
                android:id="@+id/search_input_box"
                android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:gravity="center_vertical"
	            android:background="@null"
	            android:singleLine="true"
	            android:textSize="16sp"
	            android:textColor="@color/color_gray"
	            android:textColorHint="@color/color_gray"
	            android:hint="@string/search_hint"
                />
            
        </RelativeLayout>
        <View 
	        android:layout_width="fill_parent"
	        android:layout_height="1px"
	        android:background="@drawable/home_line"
	        android:layout_alignParentBottom="true"
        />
	</RelativeLayout>	
	
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_choice"
        android:layout_below="@id/rl_title"
        android:background="@color/color_white"
        android:orientation="horizontal"
        android:visibility="gone"
        >
        <FrameLayout 
            android:id="@+id/fl_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <RelativeLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                >
                <TextView 
                    android:id="@+id/tv_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_black"
                    android:layout_centerVertical="true"
                    android:text="上海"
                    />
                <ImageView 
                    android:id="@+id/iv_city_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/home_arrow"
                    android:layout_toRightOf="@id/tv_city"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    />
            </RelativeLayout>
            <View 
		        android:layout_width="fill_parent"
		        android:layout_height="1px"
		        android:background="@drawable/home_line"
		        android:layout_gravity="bottom"
        		/>
            <ImageView 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/iv_city_sharp"
                android:src="@drawable/search_arrow"
                android:layout_gravity="bottom"
                android:visibility="gone"
                />
        </FrameLayout>
        <View 
	        android:layout_width="1px"
	        android:layout_height="fill_parent"
	        android:layout_marginTop="10dp"
	        android:layout_marginBottom="10dp"
	        android:background="@drawable/home_line"
       		/>
        <FrameLayout 
            android:id="@+id/fl_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <RelativeLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                >
                <TextView 
                    android:id="@+id/tv_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_black"
                    android:text="服务"
                    />
                <ImageView 
                    android:id="@+id/iv_category_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/home_arrow"
                    android:layout_toRightOf="@id/tv_category"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    />
            </RelativeLayout>
            <View 
		        android:layout_width="fill_parent"
		        android:layout_height="1px"
		        android:background="@drawable/home_line"
		        android:layout_gravity="bottom"
        		/>
            <ImageView 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/iv_category_sharp"
                android:src="@drawable/search_arrow"
                android:layout_gravity="bottom"
                android:visibility="gone"
                />
        </FrameLayout>
    </LinearLayout>        	    	    
	
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_hot_keyword"
        android:layout_below="@id/rl_title"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/color_gray"
            android:text="@string/hot_search_keywords"
            android:layout_marginLeft="20dp"
            />
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
	        android:orientation="horizontal"
	        >
	        <LinearLayout 
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            android:layout_weight="1"
	            >
	            <LinearLayout 
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal"
	                >
	                <TextView 
		                android:id="@+id/tv_hot_keyword1"
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:background="@color/color_white"
		                android:gravity="center"
		                android:padding="10dp"
		                android:text="亲子"
		                android:textSize="16sp"
		                android:textColor="@color/color_gray"
		                android:layout_weight="1"
		                />
	                <TextView 
		                android:id="@+id/tv_hot_keyword2"
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:background="@color/color_white"
		                android:gravity="center"
		                android:padding="10dp"
		                android:text="修身"
		                android:textSize="16sp"
		                android:textColor="@color/color_gray"
		                android:layout_marginLeft="5dp"
		                android:layout_weight="1"
		                />
	            </LinearLayout>
	            <LinearLayout 
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal"
	                android:layout_marginTop="10dp"
	                >
	                <TextView 
		                android:id="@+id/tv_hot_keyword4"
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:background="@color/color_white"
		                android:gravity="center"
		                android:padding="10dp"
		                android:text="亲子"
		                android:textSize="16sp"
		                android:textColor="@color/color_gray"
		                android:layout_weight="1"
		                />
	                <TextView 
		                android:id="@+id/tv_hot_keyword5"
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:background="@color/color_white"
		                android:gravity="center"
		                android:padding="10dp"
		                android:text="修身"
		                android:textSize="16sp"
		                android:textColor="@color/color_gray"
		                android:layout_marginLeft="5dp"
		                android:layout_weight="1"
		                />
	            </LinearLayout>
	            <TextView 
	                android:id="@+id/tv_hot_keyword7"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="10dp"
	                android:background="@color/color_white"
	                android:gravity="center"
	                android:padding="10dp"
	                android:text="瘦身瑜伽"
	                android:textSize="16sp"
	                android:textColor="@color/color_gray"
	                />
	        </LinearLayout>
	        <LinearLayout 
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            android:layout_marginLeft="5dp"
	            android:layout_weight="1"
	            >
	            <TextView 
	                android:id="@+id/tv_hot_keyword3"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:background="@color/color_white"
	                android:gravity="center"
	                android:padding="10dp"
	                android:text="角色扮演"
	                android:textSize="16sp"
	                android:textColor="@color/color_gray"
	                />
	            <TextView 
	                android:id="@+id/tv_hot_keyword6"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="10dp"
	                android:background="@color/color_white"
	                android:gravity="center"
	                android:padding="10dp"
	                android:text="活动课程"
	                android:textSize="16sp"
	                android:textColor="@color/color_gray"
	                />
	            <LinearLayout 
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal"
	                android:layout_marginTop="10dp"
	                >
	                <TextView 
		                android:id="@+id/tv_hot_keyword8"
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:background="@color/color_white"
		                android:gravity="center"
		                android:padding="10dp"
		                android:text="育儿"
		                android:textSize="16sp"
		                android:textColor="@color/color_gray"
		                android:layout_weight="1"
		                />
	                <TextView 
		                android:id="@+id/tv_hot_keyword9"
		                android:layout_width="0dp"
		                android:layout_height="wrap_content"
		                android:background="@color/color_white"
		                android:gravity="center"
		                android:padding="10dp"
		                android:text="催乳"
		                android:textSize="16sp"
		                android:textColor="@color/color_gray"
		                android:layout_marginLeft="5dp"
		                android:layout_weight="1"
		                />
	            </LinearLayout>
	        </LinearLayout>
	    </LinearLayout>
    </LinearLayout>
    
    <com.ieeton.user.view.PullDownView 
        android:id="@+id/pulldown_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_choice"
        android:visibility="gone"
        >
	    <ListView 
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:id="@+id/list"
	        android:background="@color/color_white"
	        android:divider="@drawable/home_line"
        	android:scrollbars="none"
	        />
    </com.ieeton.user.view.PullDownView>
    
</RelativeLayout>
