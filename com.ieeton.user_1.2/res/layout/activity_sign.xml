<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ieeton_color_list_bg"
    android:orientation="vertical" >
    
	<RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="5dp"
	    android:background="@color/ieeton_color_blue"
	    android:padding="10dp"
	    >
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_centerVertical="true"
	        >
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:id="@+id/tv_name"
	            android:textSize="17sp"
	            android:textColor="@color/color_white"
	            />
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:id="@+id/tv_sign"
	            android:textSize="16sp"
	            android:textColor="@color/color_white"
	            />
	        <RelativeLayout 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="10dp"
	            >
	            <ImageView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:id="@+id/iv_integral"
	                android:src="@drawable/sign_gold"
	                android:layout_centerVertical="true"
	                />
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:id="@+id/tv_integral"
	                android:textSize="17sp"
	                android:textColor="@color/color_white"
	                android:layout_toRightOf="@id/iv_integral"
	                android:layout_centerVertical="true"
	                />
	        </RelativeLayout>
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:orientation="vertical"
	        >
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:id="@+id/btn_sign"
	            android:textSize="16sp"
	            android:textColor="@color/ieeton_color_blue"
	            android:background="@drawable/search_input"
	            android:paddingLeft="10dp"
	            android:paddingRight="10dp"
	            android:gravity="center"
	            android:layout_gravity="center_horizontal"
	            />
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:id="@+id/tv_rule"
	            android:textColor="@color/color_white"
	            android:layout_marginTop="8dp"
	            android:layout_gravity="center_horizontal"
	            android:padding="5dp"
	            android:text="积分规则 >" 
	            />
	    </LinearLayout>
	</RelativeLayout>
	
	<com.ieeton.user.view.PullDownView 
        android:id="@+id/pulldown_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
		<ListView 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:id="@+id/list"
		    android:layout_marginLeft="5dp"
		    android:layout_marginRight="5dp"
		    android:background="@color/color_white"
		    android:scrollbars="none"
		    />
    </com.ieeton.user.view.PullDownView>
</LinearLayout>
