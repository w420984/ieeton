<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ieeton_color_list_bg"
    android:orientation="vertical"
    >
       <!-- 标题  -->
	<RelativeLayout
	    android:id="@+id/rl_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:background="@color/color_white"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/tab_name_myprofile"
            android:textColor="@color/ieeton_color_blue"
            android:textSize="20sp" />

        <LinearLayout 
            android:id="@+id/ll_right"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:visibility="gone"
            >
	       <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:id="@+id/tv_refresh"
		        android:text="@string/refresh"
		        android:layout_gravity="center_vertical"
		        android:textSize="20sp"
		        android:textColor="@color/ieeton_color_blue"
	           />
        </LinearLayout>
    </RelativeLayout>
	<View 
		android:layout_width="match_parent"
		android:layout_height="1px"
		android:src="@drawable/home_line"
		android:scaleType="fitXY"
        />    
	<ScrollView 
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:scrollbars="none"
        >
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
	        <RelativeLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:background="@color/ieeton_color_blue"
	            >
	            <RelativeLayout 
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:id="@+id/rl_header"
	                >
			        <RelativeLayout 
			            android:layout_width="@dimen/doctor_header_size"
			            android:layout_height="@dimen/doctor_header_size"
			            android:id="@+id/header_bg"
			            android:background="@drawable/my_head_bg"
			            android:layout_margin="10dp"
			            android:padding="4dp"
			            >
			            <com.ieeton.user.view.RoundedImageView 
				            android:layout_width="@dimen/doctor_header_size"
				            android:layout_height="@dimen/doctor_header_size"
				            android:id="@+id/iv_header"
				            android:src="@drawable/doctor_portrait"
				            android:scaleType="centerCrop"
				            android:layout_centerInParent="true"
				            />
			        </RelativeLayout>
	                <TextView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:id="@+id/tv_name"
	                    android:layout_toRightOf="@id/header_bg"
	                    android:layout_centerVertical="true"
	                    android:textSize="17sp"
	                    android:textColor="@color/color_gray"
	                    />
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:id="@+id/iv_setting"
	                    android:layout_alignParentRight="true"
	                    android:layout_centerVertical="true"
	                    android:layout_marginRight="5dp"
	                    android:background="@drawable/common_tab_bg"
	                    android:padding="10dp"
	                    android:src="@drawable/my_setting"
	                    />
	            </RelativeLayout>
	            <LinearLayout 
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal"
	                android:layout_marginTop="10dp"
	                android:layout_below="@id/rl_header"
	                >
	                <LinearLayout 
	                    android:layout_width="0dp"
	                    android:layout_height="wrap_content"
	                    android:id="@+id/ll_collection"
	                    android:padding="5dp"
	                    android:background="@color/my_profile_button_bg"
	                    android:layout_weight="1"
	                    android:orientation="vertical"
	                    >
	                    <TextView 
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:id="@+id/tv_collection_num"
	                        android:textColor="@color/color_white"
	                        android:layout_gravity="center_horizontal"
	                        />
	                    <TextView 
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:textColor="@color/color_white"
	                        android:text="收藏的服务"
	                        android:layout_gravity="center_horizontal"
	                        />
	                </LinearLayout>
	                <LinearLayout 
	                    android:layout_width="0dp"
	                    android:layout_height="wrap_content"
	                    android:id="@+id/ll_institution"
	                    android:padding="5dp"
	                    android:background="@color/my_profile_button_bg"
	                    android:layout_weight="1"
	                    android:orientation="vertical"
	                    android:layout_marginLeft="2dp"
	                    >
	                    <TextView 
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:id="@+id/tv_institution_num"
	                        android:textColor="@color/color_white"
	                        android:layout_gravity="center_horizontal"
	                        />
	                    <TextView 
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:textColor="@color/color_white"
	                        android:text="关注的机构"
	                        android:layout_gravity="center_horizontal"
	                        />
	                </LinearLayout>
	                <LinearLayout 
	                    android:layout_width="0dp"
	                    android:layout_height="wrap_content"
	                    android:id="@+id/ll_articles"
	                    android:padding="5dp"
	                    android:background="@color/my_profile_button_bg"
	                    android:layout_weight="1"
	                    android:orientation="vertical"
	                    android:layout_marginLeft="2dp"
	                    >
	                    <TextView 
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:id="@+id/tv_articles_num"
	                        android:textColor="@color/color_white"
	                        android:layout_gravity="center_horizontal"
	                        />
	                    <TextView 
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:textColor="@color/color_white"
	                        android:text="收藏的文章"
	                        android:layout_gravity="center_horizontal"
	                        />
	                </LinearLayout>
	                <LinearLayout 
	                    android:layout_width="0dp"
	                    android:layout_height="wrap_content"
	                    android:id="@+id/ll_doctors"
	                    android:padding="5dp"
	                    android:background="@color/my_profile_button_bg"
	                    android:layout_weight="1"
	                    android:orientation="vertical"
	                    android:layout_marginLeft="2dp"
	                    >
	                    <TextView 
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:id="@+id/tv_doctors_num"
	                        android:textColor="@color/color_white"
	                        android:layout_gravity="center_horizontal"
	                        />
	                    <TextView 
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:textColor="@color/color_white"
	                        android:text="关注的专家"
	                        android:layout_gravity="center_horizontal"
	                        />
	                </LinearLayout>
	            </LinearLayout>
	        </RelativeLayout>
            
	        <LinearLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:background="@color/color_white"
	            android:orientation="vertical"
	            >
	            <RelativeLayout 
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:id="@+id/rl_balance"
	                android:padding="10dp"
	                >
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:id="@+id/iv_balance"
	                    android:src="@drawable/my_balance"
	                    android:layout_centerVertical="true"
	                    />
	                <TextView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:id="@+id/tv_balance"
	                    android:textColor="@color/color_black"
	                    android:textSize="17sp"
	                    android:text="账户余额"
	                    android:layout_toRightOf="@id/iv_balance"
	                    android:layout_centerVertical="true"
	                    android:layout_marginLeft="10dp"
	                    />
	                <TextView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:id="@+id/tv_balance_num"
	                    android:textColor="@color/color_gray"
	                    android:textSize="17sp"
	                    android:layout_marginLeft="10dp"
	                    android:layout_centerVertical="true"
	                    android:layout_toRightOf="@id/tv_balance"
	                    />
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:id="@+id/iv_balance_arrow"
	                    android:layout_alignParentRight="true"
	                    android:layout_centerVertical="true"
	                    android:src="@drawable/product_arrow_right"
	                    />
	                <TextView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textColor="@color/color_black"
	                    android:layout_toLeftOf="@id/iv_balance_arrow"
	                    android:layout_centerVertical="true"
	                    android:layout_marginRight="5dp"
	                    android:text="充值"
	                    />
	            </RelativeLayout>
	            <View 
	                android:layout_width="fill_parent"
	                android:layout_height="1px"
	                android:background="@drawable/home_line"
	                />
	            <RelativeLayout 
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:id="@+id/rl_orders"
	                android:padding="10dp"
	                >
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:id="@+id/iv_orders"
	                    android:src="@drawable/my_indent"
	                    android:layout_centerVertical="true"
	                    />
	                <TextView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:id="@+id/tv_orders"
	                    android:textColor="@color/color_black"
	                    android:textSize="17sp"
	                    android:text="我的订单"
	                    android:layout_toRightOf="@id/iv_orders"
	                    android:layout_centerVertical="true"
	                    android:layout_marginLeft="10dp"
	                    />
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:id="@+id/iv_orders_arrow"
	                    android:layout_alignParentRight="true"
	                    android:layout_centerVertical="true"
	                    android:src="@drawable/product_arrow_right"
	                    />
	                <TextView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textColor="@color/color_gray"
	                    android:layout_toLeftOf="@id/iv_orders_arrow"
	                    android:layout_centerVertical="true"
	                    android:layout_marginRight="5dp"
	                    android:text="查看全部订单"
	                    />
	            </RelativeLayout>
	            <View 
	                android:layout_width="fill_parent"
	                android:layout_height="1px"
	                android:background="@drawable/home_line"
	                />
	            <RelativeLayout 
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:id="@+id/rl_integral"
	                android:padding="10dp"
	                >
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:id="@+id/iv_integral"
	                    android:src="@drawable/my_score"
	                    android:layout_centerVertical="true"
	                    />
	                <TextView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:id="@+id/tv_integral"
	                    android:textColor="@color/color_black"
	                    android:textSize="17sp"
	                    android:text="我的积分"
	                    android:layout_toRightOf="@id/iv_integral"
	                    android:layout_centerVertical="true"
	                    android:layout_marginLeft="10dp"
	                    />
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:id="@+id/iv_integral_arrow"
	                    android:layout_alignParentRight="true"
	                    android:layout_centerVertical="true"
	                    android:src="@drawable/product_arrow_right"
	                    />
	            </RelativeLayout>
	            <View 
	                android:layout_width="fill_parent"
	                android:layout_height="1px"
	                android:background="@drawable/home_line"
	                />
	        </LinearLayout>
	        
	        <LinearLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:id="@+id/ll_third_partner"
	            android:background="@color/color_white"
	            android:orientation="vertical"
	            android:layout_marginTop="10dp"
	            android:visibility="gone"
	            >
	            <View 
	                android:layout_width="fill_parent"
	                android:layout_height="1px"
	                android:background="@drawable/home_line"
	                />
	            <include 
	                layout="@layout/third_partner_item" 
	                android:id="@+id/ll_partner1"
	                android:visibility="gone"
	                />
	            <include 
	                layout="@layout/third_partner_item" 
	                android:id="@+id/ll_partner2"
	                android:visibility="gone"
	                />
	            <include 
	                layout="@layout/third_partner_item" 
	                android:id="@+id/ll_partner3"
	                android:visibility="gone"
	                />
	            <include 
	                layout="@layout/third_partner_item" 
	                android:id="@+id/ll_partner4"
	                android:visibility="gone"
	                />
	            <include 
	                layout="@layout/third_partner_item" 
	                android:id="@+id/ll_partner5"
	                android:visibility="gone"
	                />
	        </LinearLayout>
	        
	        <LinearLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:background="@color/color_white"
	            android:orientation="vertical"
	            android:layout_marginTop="10dp"
	            >
	            <View 
	                android:layout_width="fill_parent"
	                android:layout_height="1px"
	                android:background="@drawable/home_line"
	                />
	            <RelativeLayout 
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:id="@+id/rl_feedback"
	                android:padding="10dp"
	                >
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:id="@+id/iv_feedback"
	                    android:src="@drawable/my_message"
	                    android:layout_centerVertical="true"
	                    />
	                <TextView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:id="@+id/tv_feedback"
	                    android:textColor="@color/color_black"
	                    android:textSize="17sp"
	                    android:text="大大秘书"
	                    android:layout_toRightOf="@id/iv_feedback"
	                    android:layout_centerVertical="true"
	                    android:layout_marginLeft="10dp"
	                    />
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:id="@+id/iv_feedback_arrow"
	                    android:layout_alignParentRight="true"
	                    android:layout_centerVertical="true"
	                    android:src="@drawable/product_arrow_right"
	                    />
	            </RelativeLayout>
	            <View 
	                android:layout_width="fill_parent"
	                android:layout_height="1px"
	                android:background="@drawable/home_line"
	                />
	            <RelativeLayout 
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:id="@+id/rl_about"
	                android:padding="10dp"
	                >
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:id="@+id/iv_about"
	                    android:src="@drawable/my_about"
	                    android:layout_centerVertical="true"
	                    />
	                <TextView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:id="@+id/tv_about"
	                    android:textColor="@color/color_black"
	                    android:textSize="17sp"
	                    android:text="关于我们"
	                    android:layout_toRightOf="@id/iv_about"
	                    android:layout_centerVertical="true"
	                    android:layout_marginLeft="10dp"
	                    />
	                <ImageView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:id="@+id/iv_about_arrow"
	                    android:layout_alignParentRight="true"
	                    android:layout_centerVertical="true"
	                    android:src="@drawable/product_arrow_right"
	                    />
	            </RelativeLayout>
	            <View 
	                android:layout_width="fill_parent"
	                android:layout_height="1px"
	                android:background="@drawable/home_line"
	                />
	        </LinearLayout>
        </LinearLayout>
   </ScrollView>
    
</LinearLayout>
