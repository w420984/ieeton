<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lyTitleBar"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:background="@color/color_white"
     >
    <ImageView 
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@drawable/statusbar"
        android:layout_alignParentBottom="true"
        />
    
    <ImageView
        android:id="@+id/titleBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|center"
        android:layout_marginLeft="5dp"
        android:background="@drawable/common_tab_bg"
        android:padding="10dp"
        android:textColor="#242e38"
        android:textSize="11sp"
        android:focusable="true" />
    <TextView 
        android:id="@+id/tv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/titleBack"
        android:textSize="20sp"
        android:textColor="@color/ieeton_color_blue"
        android:paddingLeft="5dp"
        android:visibility="gone"
        />

	<TextView
	    android:id="@+id/titleText"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:ellipsize="end"
	    android:layout_centerInParent="true"
	    android:includeFontPadding="false"
	    android:maxWidth="140dp"
	    android:padding="0dp"
	    android:singleLine="true"
	    android:textColor="@color/ieeton_color_blue"
	    android:textSize="18sp" />
        
    <RelativeLayout
        android:id="@+id/rlProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="2dip"
        android:focusable="true"
        android:visibility="gone" >

        <ProgressBar
            android:id="@android:id/progress"
            style="@android:style/Widget.ProgressBar.Small"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <TextView
        android:id="@+id/titleSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|center"
        android:layout_marginRight="5dp"
        android:background="@drawable/common_tab_bg"
        android:padding="10dp"
        android:textColor="@color/ieeton_color_blue"
        android:textSize="18sp"
        android:visibility="visible"
        android:focusable="true" />
    <ImageView
        android:id="@+id/titleRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|center"
        android:layout_marginRight="5dp"
        android:background="@drawable/common_tab_bg"
        android:padding="10dp"
        android:textColor="@color/ieeton_color_blue"
        android:textSize="18sp"
        android:visibility="visible"
        android:focusable="true" />

</RelativeLayout>