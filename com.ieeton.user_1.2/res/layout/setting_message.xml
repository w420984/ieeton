<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
   	android:layout_height="match_parent"
   	android:background="@color/ieeton_color_list_bg"
   	android:layout_below="@id/rl_title_bar"
   	android:orientation="vertical">
	<!-- 标题  -->
	<RelativeLayout 
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:background="@color/ieeton_color_title_white"
        android:gravity="center_vertical"
        >
        <include layout="@layout/commom_back_btn" />
  
        <TextView 
	        android:id="@+id/tv_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/new_message_notify"
	        android:textSize="20sp"
	        android:textColor="@color/ieeton_color_title_gray"
	        android:layout_centerInParent="true"
	        />
    </RelativeLayout> 
   
   <ImageView 
	android:layout_width="match_parent"
	android:layout_height="1dp"
	android:src="@drawable/list_divider"
	android:scaleType="fitXY"
       />     
   
   <!-- 设置 -->
    <ImageView 
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_marginTop="20dp"
		android:src="@drawable/list_divider"
		android:scaleType="fitXY"
        /> 

    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >

        <com.ieeton.user.view.SliderSwitchView 
            android:id="@+id/switch_new_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" 
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            />

	    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" 
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:text="@string/switch_new_message"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </RelativeLayout>
    
    <ImageView 
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:src="@drawable/list_divider"
		android:scaleType="fitXY"
		android:layout_marginLeft="15dp"
        /> 

    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >

        <com.ieeton.user.view.SliderSwitchView 
            android:id="@+id/switch_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" 
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />

	    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" 
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:text="@string/switch_voice"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </RelativeLayout>

    <ImageView 
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:src="@drawable/list_divider"
		android:scaleType="fitXY"
		android:layout_marginLeft="15dp"
        /> 

    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >

        <com.ieeton.user.view.SliderSwitchView 
            android:id="@+id/switch_vibration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" 
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />

	    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" 
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:text="@string/switch_vibration"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </RelativeLayout>
    		    
    <ImageView 
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:src="@drawable/list_divider"
		android:scaleType="fitXY"
        />   

    	    	        
</LinearLayout>    
