<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/doctor_list_height"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:gravity="center"
    >
    
	<com.ieeton.user.view.RoundedImageView 
	    android:layout_width="@dimen/doctor_header_size"
	    android:layout_height="@dimen/doctor_header_size"
	    android:id="@+id/header"
	    android:src="@drawable/doctor_portrait"
	    android:layout_centerHorizontal="true"
	    />
	<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:id="@+id/name"
	    android:textColor="@color/color_gray"
	    android:layout_below="@id/header"
	    android:layout_marginTop="5dp"
	    android:text="李明"
	    android:layout_centerHorizontal="true"
	    />
</RelativeLayout>
